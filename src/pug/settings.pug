include ./partials/messages/messages-dialog.pug
include ./partials/messages/overlay.pug
include ./components/form-input.pug

mixin switch(options)
  .switch
    button.switch__button(class= options.value && "active")= options.left || "Да"
    button.switch__button(class= !options.value && "active")= options.right || "Нет"
    .switch__label= options.label

doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge" )
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="shortcut icon", type="image/x-icon", href="favicon.ico")
    title Andrey Chizhov - cabinet
    link(rel="stylesheet" href="css/index.css")

  body(id="top")
    include ./partials/header.pug
    include ./partials/cabinet/scroll-back.pug

    .container__settings
      .settings__left
        include ./partials/cabinet/profile.pug
      .settings__right
        form.settings(action="")
          .settings__header
            .settings__heading.heading Уведомления, которые будут отправлены
            .settings__sub-heading.sub-heading на вашу электронную почту

          .settings__group
            +switch({
              label: "Новые запросы на урок с экспертом",
              value: true
            })

            +switch({
              label: "Новые сообщения от студентов",
              value: true
            })

            +switch({
              label: "Приглашения на общие собрания экспертов"
            })

          .settings__change-password
            .settings__heading.heading Уведомления, которые будут отправлены
            .settings__sub-heading.sub-heading на вашу электронную почту

          .settings__password-inputs
            +form-input({
              label: "Старый пароль:",
              name: "city",
              value: "•••••••",
              inlay: "Показать"
            })
            +form-input({
              label: "Новый пароль:",
              name: "city",
              value: "•••••••",
              inlay: "Показать"
            })
            +form-input({
              label: "ПОвторите новый пароль:",
              name: "city",
              value: "K@lesniko1982",
              inlay: "Скрыть",
              inlayClass: "form-input__inlay--accent"
            })


    include ./partials/footer.pug

    script(src="js/script.min.js" defer="true")
    script(src="js/index.global.min.js" defer="true")
